{% extends 'base.html.twig' %}

{% block title %}Départements{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <h1>Les beaux départements de {{ region.nom }} !</h1>

    <div>
        <ul>
            {% for departement in departements %}
                <li>
                    <a href="{{ path('comByDep', {'codeDep':departement.code}) }}">
                        {{ departement.nom }}
                    </a>
                </li>
            {% endfor %}
        </ul>
        <a href="{{ path('regions') }}">
            <button>
                Retour Regions
            </button>
        </a>
    </div>

{% endblock %}
