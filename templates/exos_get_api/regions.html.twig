{% extends 'base.html.twig' %}

{% block title %}Regions{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <h1>Les belles régions françaises!</h1>

    <div>
        <ul>
            {% for region in regions %}
                <li>
                    <a href="{{ path('depByReg', {'codeReg':region.code}) }}">
                        {{ region.nom }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>

{% endblock %}
